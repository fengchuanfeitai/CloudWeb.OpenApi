@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "展品管理";
}

<div class="x-nav">
    <span class="layui-breadcrumb">
        <a href="">首页</a>
        <a href="">会展中心</a>
        <a>
            <cite>@ViewBag.Title</cite>
        </a>
    </span>

    <a class="layui-btn layui-btn-small" style="line-height:1.6em;margin-top:3px;float:right" onclick="location.reload()" title="刷新">
        <i class="layui-icon layui-icon-refresh" style="line-height:30px"></i>
    </a>
</div>

<div class="layui-fluid">
    <div class="layui-row layui-col-space15">
        <div class="layui-col-md12">
            <div class="layui-card">
                <div class="layui-card-body ">
                    <form class="layui-form layui-row">
                        <div class="layui-input-inline layui-show-xs-block">
                            <select name="SearchCorp" id="corpSelect">
                                <option value=""></option>
                            </select>
                        </div>
                        <div class="layui-input-inline layui-show-xs-block">
                            <input type="text" id="SearchName" placeholder="根据产品名称进行模糊查询" autocomplete="off" class="layui-input">
                        </div>
                        <div class="layui-input-inline layui-show-xs-block">
                            <button type="button" class="layui-btn" data-type="reload" id="search">
                                <i class="layui-icon">&#xe615;</i>
                            </button>
                        </div>
                    </form>

                </div>
                <div class="layui-card-header toolbars">
                    <button class="layui-btn" data-type="createProduct">
                        <i class="layui-icon"></i>添加展品
                    </button>
                    <button class="layui-btn layui-btn-danger" data-type="delSelected">
                        <i class="layui-icon"></i>批量删除
                    </button>
                </div>
                <div class="layui-card-body">
                    <table class="layui-table layui-form" id="corp_productlist" lay-filter="corp_products">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/html" id="bar">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
@* ?v=@DateTime.Now.ToString("yyyyMMddHHmmss") *@
<script src="~/Scripts/corpProduct/corpProduct.js"></script>